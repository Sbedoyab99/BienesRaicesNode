extends ../layout/index

block contenido
  div(class="py-10")
    h1(class="text-4xl my-10 font-extrabold text-center") Bienes
      span(class="font-normal") Raices
    h2(class="text-center text-2xl font-extrabold")= pagina
  div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
    div(class= error ? "bg-red-500 rounded-lg" : "bg-green-500 rounded-lg")
      p(class="py-2 px-5 w-full font-bold text-center text-white")= mensaje
    if !error
      div(class="pt-5 text-center")
        a(href="/auth/login" class="text-gray-500 text-xs") ¿Has Confirmado tu Cuenta? 
          b Inicia Sesión
    else 
      div(class="pt-5 text-center")
        a(href="/auth/registro" class="text-gray-500 text-xs text-center") ¿Aún no tienes una Cuenta? 
          b Crea una