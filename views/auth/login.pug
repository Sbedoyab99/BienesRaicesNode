extends ../layout/index

block contenido
	div(class="py-10")
		h1(class="text-4xl my-10 font-extrabold text-center") Bienes
			span(class="font-normal") Raices
		h2(class="text-center text-2xl font-extrabold")= pagina
		if errores
			div(class="max-w-md mx-auto my-10")
				each error in errores 
					p(class="bg-red-600 text-white text-xs text-center p-2 mb-1 font-bold")= error.msg
		div(class="mt-8 mx-auto max-w-lg")
			div(class="bg-white py-8 px-4 shadow")
				form(method="POST" class="space-y-5" novalidate)
					input(type="hidden" name="_csrf" value=csrfToken)
					div  
						label(for="email" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Correo
						input(type="email" id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"
						placeholder="Ingresa tu correo" name="email")
					div  
						label(for="password" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Contraseña
						input(type="password" id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"
						placeholder="Ingresa tu contraseña" name="password")
					input(type="submit" value="Iniciar Sesión" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer")
					div(class="flex items-center justify-between")
						a(href="/auth/registro" class="text-gray-500 text-xs") ¿Aún no tienes una Cuenta? 
							b Crea una
						a(href="/auth/olvide-password" class="text-gray-500 text-xs") 
							i ¿Olvidaste tu Contraseña?