div(class="bg-white shadow rounded-lg")
  img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`Imagen: ${propiedad.titulo}`)
  div(class="p-5 space-y-2")
    h3(class="text-2xl font-bold")= propiedad.titulo
    h4(class="text-xl font-bold text-indigo-500")= propiedad.precio.nombre
    p(class="text-sm text-gray-600") Habitaciones:  
      span(class="text-gray-800 font-bold")= propiedad.habitaciones
    p(class="text-sm text-gray-600") Estacionamientos:  
      span(class="text-gray-800 font-bold")= propiedad.estacionamiento
    p(class="text-sm text-gray-600") Baños:  
      span(class="text-gray-800 font-bold")= propiedad.baños
    a(href=`/propiedad/${propiedad.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver Propiedad 