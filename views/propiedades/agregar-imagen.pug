extends ../layout/admin
block styles 
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
  meta(name="csrf-token" content=csrfToken)
    
block contenido
  div(class="py-10")
    h1(class="text-4xl my-10 font-extrabold text-center") Bienes
      span(class="font-normal") Raices
    h2(class="text-center text-2xl font-extrabold")= pagina
    div(class="mx-auto max-w-4xl")
      a(class="rounded py-2 bg-indigo-600 hover:bg-indigo-700 text-sm px-10 font-bold text-center text-white my-5 inline-block w-full sm:w-auto"
      href="/mis-propiedades" ) Â« Volver 
      if errores
        div(class="max-w-md mx-auto my-10")
          each error in errores 
            p(class="bg-red-300 text-black text-xs text-left p-2 mb-1 font-bold border-red-600 border-l-8")= error.msg
      div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl md:px-10")
        form(action=`/propiedades/agregar-imagen/${propiedad.id}` id="imagen" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST")
          input(type="hidden" name="_csrf" value=csrfToken)
          
        button(id="publicar" class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer mt-5" type="button") Publicar Propiedad

block scripts
  script(src="/js/agregarImagen.js")